{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Profile TSA/TDAH",
  "type": "object",
  "properties": {
    "type_fonctionnement": {"type": "string", "enum": ["TSA", "TDAH", "mixte", "non_spécifié"]},
    "longueur_pref": {"type": "string", "enum": ["tres_court", "moyen", "detaille"]},
    "format_pref": {"type": "string", "enum": ["puces", "etapes", "mini_texte"]},
    "difficultes_principales": {"type": "array", "items": {"type": "string"}},
    "sensibilite_stimulations": {"type": "string", "enum": ["faible", "moyenne", "elevee"]},
    "besoin_validation": {"type": "string", "enum": ["souvent", "parfois", "non"]},
    "usages_frequents": {"type": "array", "items": {"type": "string"}},
    "derniere_mise_a_jour": {"type": "string", "format": "date-time"}
  },
  "required": ["type_fonctionnement", "longueur_pref", "format_pref"]
}
